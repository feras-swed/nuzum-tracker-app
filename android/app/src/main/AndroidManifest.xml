<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 
      ==============================================================
      SECTION 1: PERMISSIONS 
      ==============================================================
      These permissions are required for Internet access, location, 
      and running foreground services.
    -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- Optional but recommended permissions for service stability -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <application
        android:label="nuzum_tracker"
        android:name=".MyApplication"
        android:icon="@mipmap/ic_launcher">
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            
            <meta-data
              android:name="io.flutter.embedding.android.NormalTheme"
              android:resource="@style/NormalTheme"
              />
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Don't delete the meta-data below. This is used by the Flutter tool. -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
        
        <!-- 
          ==============================================================
          SECTION 2: BACKGROUND SERVICE CONFIGURATION
          ==============================================================
          This is the correct configuration for the flutter_background_service package.
        -->
        <service
            android:name="id.flutter.flutter_background_service.FlutterBackgroundService"
            android:foregroundServiceType="location" />

        <meta-data
            android:name="flutter_background_service.notification_channel_id"
            android:value="nuzum_tracker_foreground" />

        <meta-data
            android:name="flutter_background_service.notification_channel_name"
            android:value="Nuzum Tracker Service" />

        <meta-data
            android:name="flutter_background_service.notification_channel_description"
            android:value="This channel is used for location tracking service." />

        <meta-data
            android:name="flutter_background_service.notification_icon"
            android:resource="@drawable/ic_bg_service_small" />
        <!-- IMPORTANT: Ensure a file named 'ic_bg_service_small.png' exists in 'android/app/src/main/res/drawable/' -->

    </application>

    <!-- This section is for Android 11+ package visibility rules, it's fine to keep it. -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT"/>
            <data android:mimeType="text/plain"/>
        </intent>
    </queries>
</manifest>